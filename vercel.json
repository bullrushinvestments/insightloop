      rules: [
        {
          urlPattern: '/**/*.js',
          immutableDays: 7,
          browserCacheTtlSeconds: 31536000,
          edgeCacheTtlSeconds: 86400
        }
      ]
    },
    {
      matchPattern: '**/*.css',
      rules: [
        {
          urlPattern: '/**/*.css',
          immutableDays: 7,
          browserCacheTtlSeconds: 31536000,
          edgeCacheTtlSeconds: 86400
